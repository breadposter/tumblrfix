{

  "manifest_version": 2,
  "name": "TumblrFix",
  "version": "1.0",

  "description": "Fix Tumblr issues that annoy me and I can't find an easy way around with pre-existing extensions.",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.tumblr.com/*"],
      "js": ["fixit.js"]
    }
  ],

  "developer": {
    "name": "Uzume Sakura",
    "url": "https://github.com/breadposter/TumblrFix"
  }

}
